#!/bin/bash
set -eo pipefail
shopt -s nullglob

root="${0%/*}"
build="$root/build"

build() {
  local browser="${1:?}"

  (
    set -x
    cd "$build"

    rm -rf "$browser"
    rsync -ahS -L "../$browser" ./

    cd "$browser"

    case "$browser" in
      chrome|webext)
      	web-ext build -s . -a .. -o
	;;
      firefox)
      	jpm xpi --addon-dir .
      	mv -vf -- *.xpi ..
      	;;
      *)
      	printf 'Unknown browser: %s\n' "$browser" >&2
      	;;
    esac

  )
}

[ $# -gt 0 ] || set -- webext firefox

for browser in "$@"; do
  printf '# %s:\n' "$browser"
  build "$browser"
  echo
done

echo '# build/* :'
ls -ltrh $(find "$root/build" -maxdepth 1 -type f -not -name '.*')

